<br>
<ul>
<li><%= @restaurant.name %></li>
<li><%= @restaurant.category %></li>
<li><%= @restaurant.phone_number %></li>
<li><%= @restaurant.address %></li>
</ul>
<br>
<%= link_to "Write a Review", new_restaurant_review_path(@restaurant), class:"btn btn-success" %>


<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
<br>


<%= link_to "Back to Restaurants", restaurants_path, class:"btn btn-primary" %>
